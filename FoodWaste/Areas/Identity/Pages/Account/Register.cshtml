@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">
        <div class="col-md-4">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>
                <h4>Register as a restaurant.</h4>
                <hr />
                <p>Fill the fiels below if you wish to register as a restaurant (optional).</p>
                <div class="form-group">
                    <label asp-for="Input.RestaurantName"></label>
                    <input asp-for="Input.RestaurantName" class="form-control" />
                    <span asp-validation-for="Input.RestaurantName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.RestaurantAddress"></label>
                    <input asp-for="Input.RestaurantAddress" class="form-control" />
                    <span asp-validation-for="Input.RestaurantAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.RestaurantPhoneNumber"></label>
                    <input asp-for="Input.RestaurantPhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.RestaurantPhoneNumber" class="text-danger"></span>
                </div>
            </section>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
